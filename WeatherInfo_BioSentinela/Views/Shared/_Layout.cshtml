<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BioSentinela</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherInfo_BioSentinela.styles.css" asp-append-version="true" />

    <style>
        /* Navbar background verde suave */
        nav.navbar {
            background-color: #e6f2ef !important; /* verde claro e suave */
        }

        /* Logo em verde médio */
        .navbar-brand {
            color: #2a9d8f !important;
            font-weight: 700;
        }

        /* Links ativos em verde mais escuro */
        .nav-link.active {
            color: #1f776b !important;
            font-weight: 600;
        }

        .nav-link:hover {
            color: #1f776b !important;
        }

        /* Botões verdes personalizados */
        .btn-sustentabilidade {
            color: #ffffff;
            background-color: #2a9d8f;
            border-color: #2a9d8f;
        }

            .btn-sustentabilidade:hover,
            .btn-sustentabilidade:focus {
                background-color: #1f776b;
                border-color: #1f776b;
                color: #e6f2ef;
            }

        .btn-outline-sustentabilidade {
            color: #2a9d8f;
            border-color: #2a9d8f;
        }

            .btn-outline-sustentabilidade:hover,
            .btn-outline-sustentabilidade:focus {
                color: #e6f2ef;
                background-color: #2a9d8f;
                border-color: #2a9d8f;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    BioSentinela
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Estado") ? "active" : "")"
                               asp-area="" asp-controller="Estado" asp-action="Index">Consulta por Estado</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Alertas") ? "active" : "")"
                               asp-area="" asp-controller="Alertas" asp-action="Index">Alertas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Mapa") ? "active" : "")"
                               asp-area="" asp-controller="Mapa" asp-action="Index">Mapa de Risco</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["controller"]?.ToString() == "Saude") ? "active" : "")"
                               asp-area="" asp-controller="Saude" asp-action="Index">Minha Saúde</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewContext.RouteData.Values["action"]?.ToString() == "Privacy") ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container pb-4">
        @RenderBody()
    </main>

    <footer class="border-top text-muted py-3 mt-auto">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - BioSentinela</span>
            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>