@model List<WeatherInfo_BioSentinela.Models.Autoavaliacao>
@{
    ViewData["Title"] = "Minha Saúde";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-success">❤️ Minha Saúde</h2>

    @if (ViewBag.Mensagem != null)
    {
        <div class="alert alert-success">@ViewBag.Mensagem</div>
    }

    <form asp-action="Index" method="post" class="mb-4">
        <div class="form-group">
            <label class="text-success">Descreva seus sintomas atuais:</label>
            <textarea name="sintomas" class="form-control border-success" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-sustentabilidade mt-2">Enviar Autoavaliação</button>
    </form>

    <h4>📋 Histórico de Autoavaliações</h4>
    <ul class="list-group mt-3">
        @foreach (var a in Model)
        {
            <li class="list-group-item">
                <strong>@a.Data.ToShortDateString()</strong> — @a.Sintomas
            </li>
        }
    </ul>
</div>
