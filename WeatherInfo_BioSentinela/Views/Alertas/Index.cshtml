@model List<WeatherInfo_BioSentinela.Models.Alerta>
@{
    ViewData["Title"] = "Alertas Ativos";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📢 Alertas Ativos</h2>

    @foreach (var alerta in Model)
    {
        <div class="card mb-4 shadow-sm border-danger">
            <div class="card-body">
                <h5 class="card-title text-danger">@alerta.Titulo</h5>
                <p class="card-text">@alerta.Descricao</p>
                <ul class="list-group list-group-flush">
                    @foreach (var rec in alerta.Recomendacoes)
                    {
                        <li class="list-group-item">✅ @rec</li>
                    }
                </ul>
            </div>
        </div>
    }
</div>